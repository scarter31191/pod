<%= render partial: 'layouts/errors', locals: { object: @topic } %>

<%= form_for(@topic) do |f| %>

  <ul>
    <div>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </div>

    <div>
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    <div>

    <div>
      <%= f.submit %>
    </div>
  </ul>
<% end %>
